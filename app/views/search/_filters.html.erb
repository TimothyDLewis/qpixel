<div class="form-group">
  <h2>Filter</h2>
  <div class="form-group-horizontal">
    <div class="form-group">
      <%= label_tag :filter_score_min, 'Min Score', class: "form-element" %>
      <%= number_field_tag :filter_score_min, params[:filter_score_min], min: 0, max: 1, step: 0.01, class: 'form-element' %>
    </div>
    <div class="form-group">
      <%= label_tag :filter_score_max, 'Max Score', class: "form-element" %>
      <%= number_field_tag :filter_score_max, params[:filter_score_max], min: 0, max: 1, step: 0.01, class: 'form-element' %>
    </div>
  </div>
</div>
